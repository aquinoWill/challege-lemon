{
  "name": "challenge-lemon",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "lint": "eslint -c .eslintrc.js --ext .js,.jsx .",
    "lint:fix": "npm run lint -- --fix",
    "test": "react-scripts test --env=jsdom --no-cache --watchAll",
    "test:ci": "npm run test:coverage -- --runInBand --watchAll=false",
    "test:coverage": "npm run test -- --no-cache --coverage --runInBand",
    "prepare": "husky install"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!src/App.js",
      "!src/reportWebVitals.js",
      "!src/index.js",
      "!src/**/*.styled.js",
      "!src/assets/index.js",
      "!src/pages/index.js",
      "!src/hooks/index.js",
      "!src/routes/index.js",
      "!src/components/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "eslint-import-resolver-node": "^0.3.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.9.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.18.6",
    "@testing-library/dom": "^9.0.1",
    "@testing-library/user-event": "^13.5.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-babel-module": "^5.3.2",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "jest": "^27.5.1",
    "styled-components": "^5.3.9"
  }
}